# Production Environment Variables
# Copy this to .env.production and fill in real values

# Database URL for production deployment
DATABASE_URL_PRODUCTION="mysql://user:password@host:port/database?sslaccept=accept_invalid_certs"

# Next Auth (Production)
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_SECRET="generate-a-secure-secret-for-production"

# Application
ADMIN_EMAIL="admin@your-domain.com"
DEBUG_FLAG="false"

# Optional: Admin Link Delay (seconds)
ADMIN_LINK_DELAY_SECONDS="5"